<!DOCTYPE html>
<html>
  <head>
    <title>RightMeowOauth</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= current_user.name%>
      <%= link_to "Sign out", logout_path%>
    <%else%>
      <%= link_to 'Login with Facebook', auth_path(provider: 'facebook') %>
    <%end%>
    <%= yield %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>RightMeowOauth</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Merienda+One" rel="stylesheet">
  </head>

  <body>
    <div class="container-fluid">
      <div class="row flex-container">
        <div class="col-md-12">
          <h1 class="headline text-center m-x-auto">Right Meow!</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2 col-md-2 side-icons container">
          <%= image_tag("rightmeow_fullcat.png")%>
        </div>
        <div class="col-lg-8 col-md-8 text-center main">
          <%= image_tag("rightmeow_illustration.png", class: "top-icon", size: 150)%>
          <div class="logged-in">
            <% if logged_in? %>
              Not
              <%= link_to "#{current_user.name}", edit_user_path %>?
              <%= link_to "Sign out", logout_path%>
            <%else%>
            <%end%>
          </div>
          <%= yield %>
        </div>
        <div class="col-lg-2 col-md-2 side-icons container">
          <%= image_tag("rightmeow_hospitalshade.png") %>
        </div>
      </div>
    </div>
  </body>
</html>

<%= form_for @user do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :phone, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :address, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :nickname, class: "col-xs-2 col-form-label" %>
    <div class="col-xs-10">
      <%= f.text_field :nickname, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<%end%>

<div class="container">
  <% @pets.each do |pet| %>
    <div class="row">
      <div class="col-xs-6 col-md-4">
        <%= pet.name %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= pet.type_of_pet %>
      </div>
      <div class="col-xs-6 col-md-4">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      </div>
    </div>
  <% end %>
</div>
